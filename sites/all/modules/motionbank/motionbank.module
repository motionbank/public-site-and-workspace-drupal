<?php

    /**
     *  hook_nodeapi
     *  disable term "group only" for ungrouped nodes.
     */
    function motionbank_nodeapi( &$node, $op, $a3 = NULL, $a4 = NULL ) {
      switch ($op) {
        case 'insert':
        case 'presave':
            
            // not in a group and set to term "group only"
            if ( empty($node->og_groups) && (empty($node->taxonomy) || $node->taxonomy[1] == '1') )
            {
                $node->taxonomy[1] = '3';
                @node_save( $node );
            }
            
          break;
      }
    }