/* local tasks block && group / project block */

	.region-sidebar-second .block-block .content ul,
	.region-sidebar-second .block-motionbank .content ul
	{
	  margin-top: 5px;
	  padding-left: 0px;
	}

	.region-sidebar-second .block-block .content ul.chained,
	.region-sidebar-second .block-motionbank .content ul.chained
	{
	  margin-bottom: 0px;
	}

	.region-sidebar-second .block-block .content ul.links li,
	.region-sidebar-second .block-motionbank .content ul.links li
	{
	  padding: 0px;
	}

	.region-sidebar-second .block-block .content ul ul,
	.region-sidebar-second .block-motionbank .content ul ul
	{
	  padding-left: 12px;
	}

	.region-sidebar-second .block-block .content li,
	.region-sidebar-second .block-motionbank .content li
	{
	  list-style: none;
	}

	.region-sidebar-second .block-block .content li a,
	.region-sidebar-second .block-motionbank .content li a
	{
	  display: block;
	  background-color: #A2AAB1;
	  padding: 6px 0px 6px 12px;
	  margin-bottom: 5px;
	  color: white;
	}

	.region-sidebar-second .block-block .content li.active,
	.region-sidebar-second .block-motionbank .content li.active
	{
	  background-color: #E7EAED;
	  color: black;
	}